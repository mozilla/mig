{
    "name": "Integration tests",
    "description": {
        "author": "Julien Vehent",
        "email": "ulfr@mozilla.com",
        "revision": 201409031000
    },
    "target": "queueloc like 'linux.%'",
    "threat": {
        "level": "-",
        "family": "test"
    },
    "operations": [
        {
            "module": "file",
            "parameters": {
                "searches": {
                    "sshnotmatch": {
                        "paths": [
                            "/home/*/.ssh/*"
                        ],
                        "regexes": [
                            "should not match"
                        ]
                    },
                    "yumshouldmatch": {
                        "paths": [
                            "/etc/*yum*/*.repo"
                        ],
                        "regexes": [
                            "^gpgcheck=1$"
                        ]
                    },
                    "etcshouldmatch": {
                        "paths": [
                            "/etc/"
                        ],
                        "regexes": [
                            "^jvehent:"
                        ]
                    },
                    "shadownotmatch": {
                        "paths": [
                            "/etc/shadow"
                        ],
                        "regexes": [
                            "^shouldnotmatch$"
                        ],
                        "filenames": [
                            "^bob$"
                        ]
                    },
                    "shadowmatch": {
                        "paths": [
                            "/etc/shadow"
                        ],
                        "regexes": [
                            "^root:"
                        ],
                        "filenames": [
                            "^shadow$"
                        ]
                    }
                }
            }
        },
        {
            "module": "netstat",
            "parameters": {
                "connectedip": [
                    "0.0.0.0/0"
                ],
                "listeningport": [
                    "22"
                ],
                "localip": [
                    "0.0.0.0/0"
                ],
                "localmac": [
                    "^[0-9a-f]"
                ],
                "neighborip": [
                    "0.0.0.0/0"
                ],
                "neighbormac": [
                    "^[0-9a-f]"
                ]
            }
        },
        {
            "module": "ping",
            "parameters": {
                "destination": "localhost",
                "protocol": "icmp",
                "count": 5
            }
        }
    ],
    "syntaxversion": 2
}
